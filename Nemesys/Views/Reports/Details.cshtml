@model Nemesys.ViewModels.ReportViewModel

@{
    ViewData["Title"] = "Report Details";
}

<h1>@Model.Title</h1>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date of Report
        </dt>
        <dd class="col-sm-10">
            @Model.DateOfReport.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Image for @Model.Title" />
        </dd>
        <dt class="col-sm-2">
            Content
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            Upvotes
        </dt>
        <dd class="col-sm-10">
            @Model.Upvotes
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
